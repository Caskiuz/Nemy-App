{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node"]
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "shared/**/*",
    "drizzle.config.ts",
    "jest.config.ts",
    "e2e.spec.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/**", "build", "dist", "**/*.test.ts"],
}
