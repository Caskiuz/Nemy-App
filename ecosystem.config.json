{
  "apps": [
    {
      "name": "nemy-api",
      "script": "server/server-production.ts",
      "interpreter": "node",
      "interpreter_args": "--loader tsx",
      "instances": 2,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "error_file": "./logs/api-error.log",
      "out_file": "./logs/api-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "listen_timeout": 3000,
      "kill_timeout": 5000
    },
    {
      "name": "nemy-jobs",
      "script": "server/jobsRunner.ts",
      "interpreter": "node",
      "interpreter_args": "--loader tsx",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "300M",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/jobs-error.log",
      "out_file": "./logs/jobs-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "cron_restart": "0 3 * * *"
    }
  ]
}
