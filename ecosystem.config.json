{
  "apps": [
    {
      "name": "nemy-api",
      "script": "server/server.ts",
      "interpreter": "npx",
      "interpreter_args": "tsx",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "500M",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      },
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
}
